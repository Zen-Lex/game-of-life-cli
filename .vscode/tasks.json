{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++-13",
            "args": [
                "-std=c++20",
                "project.cpp",
                "gameoflife.cpp",
                "grid.cpp",
                "menu.cpp",
                "parser.cpp",
                "-fsanitize=address",
                "-lncurses",
                "-pthread",
                "-o",
                "build/project"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}